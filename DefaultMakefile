PROJECT_NAME={{.ProjectName}}
MODULE_NAME={{.ModuleName}}

.DEFAULT_GOAL := build

.PHONY: build
build:
	@go build -o {{.ProjectName}} ./cmd/main.go

.PHONY: fmt
fmt:
	@go fmt ./...

.PHONY: test
test:
	@go test -v ./...

.PHONY: get
get:
	@go mod download

{{ if .isDocker -}}
.PHONY: docker
docker:
	@docker build -f ./build/Dockerfile -t {{.ProjectName}}:latest .
{{- end }}

{{ if .isKubernetes -}}
.PHONY: kubernetes
kubernetes:
	@kubectl apply -f ./build/app-deployment.yaml
{{- end }}